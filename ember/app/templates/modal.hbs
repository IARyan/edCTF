{{!-- Show current modal --}}
{{#if modal.isLogin}}
  {{login-modal authController=authController modal=modal sendLogin="login"}}
{{else}}
  {{#if modal.isRegister}}
    {{register-modal authController=authController modal=modal sendRegister="register"}}
  {{else}}
    {{#if modal.isChallenge}}
      {{challenge-modal validatorController=validatorController modal=modal challenge=modal.challenge store=store session=session submitFlag="submitFlag"}}
    {{else}}
      {{#if modal.isTeam}}
        {{team-modal modal=modal team=modal.team store=store ctf=ctf session=session}}
      {{else}}
        {{#if modal.isProfile}}
          {{profile-modal modal=modal session=session store=store ctf=ctf editProfile="editProfile"}}
        {{else}}
          {{#if modal.isLogout}}
            {{logout-modal modal=modal logout="logout"}}
          {{else}}
            {{#if authController.session.isAdmin}}
              {{#if modal.isAdminCtf}}
                {{admin-ctf-modal modal=modal ctfController=adminController.ctfController}}
              {{else}}
                {{#if modal.isAdminChallenge}}
                  {{admin-challenge-modal modal=modal challengeboardController=adminController.challengeboardController}}
                {{else}}
                  {{#if modal.isAdminTeam}}
                    {{admin-team-modal modal=modal store=store scoreboardController=adminController.scoreboardController}}
                  {{/if}}
                {{/if}}
              {{/if}}
            {{/if}}
          {{/if}}
        {{/if}}
      {{/if}}
    {{/if}}
  {{/if}}
{{/if}}

{{!-- show confirmation modal --}}
{{#if modal.isConfirm}}
  {{confirm-modal modal=modal callback=modal.confirmCallback message=modal.confirmMesg}}
{{/if}}
