<!-- Show current modal -->
{{#if modal.isLogin}}
  {{login-modal authController=authController modal=modal sendLogin="login"}}
{{else}}
  {{#if modal.isRegister}}
    {{register-modal authController=authController modal=modal sendRegister="register"}}
  {{else}}
    {{#if modal.isChallenge}}
      {{challenge-modal validatorController=validatorController modal=modal challenge=modal.challenge store=store user=user}}
    {{else}}
      {{#if modal.isTeam}}
        {{team-modal modal=modal team=modal.team store=store ctf=ctf}}
      {{else}}
        {{#if modal.isProfile}}
          {{profile-modal modal=modal user=user team=user.team store=store ctf=ctf}}
        {{else}}
          {{#if modal.isLogout}}
            {{logout-modal modal=modal logout="logout"}}
          {{/if}}
        {{/if}}
      {{/if}}
    {{/if}}
  {{/if}}
{{/if}}
