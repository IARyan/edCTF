{{#modal-dialog translucentOverlay=true}}
  <div class="well login-box login-box-margin">
    <form class="form-signin">
      <h2 class="form-signin-heading">Register</h2>
      {{#if authController.errorMessage}}
        <label class="control-label"><div class="alert alert-danger" style="padding: 5px; margin-bottom: 0px;" role="alert">{{authController.errorMessage}}</div></label> 
      {{/if}}

      {{#if authController.errorFields.email}} 
        <div class="form-group has-error"> 
          Email:{{input type="text" value=email enter="submitRegister" class="form-control" id="inputEmail" placeholder="Email"}}
        </div>
      {{else}}
        <div class="form-group">      
          Email:{{input type="text" value=email enter="submitRegister" class="form-control" id="inputEmail" placeholder="Email"}}
        </div>
      {{/if}}

      {{#if authController.errorFields.teamname}} 
        <div class="form-group has-error">
          Team Name:{{input type="text" value=teamname enter="submitRegister" class="form-control" id="inputteamname" placeholder="Team Name"}}
        </div>
      {{else}}
        <div class="form-group">
          Team Name:{{input type="text" value=teamname enter="submitRegister" class="form-control" id="inputteamname" placeholder="Team Name"}}
        </div>
      {{/if}}

      {{#if authController.errorFields.username}} 
        <div class="form-group has-error">
          Username:{{input type="text" value=username enter="submitRegister" class="form-control" id="inputusername" placeholder="Username"}}
        </div>
      {{else}}
        <div class="form-group">
          Username:{{input type="text" value=username enter="submitRegister" class="form-control" id="inputusername" placeholder="Username"}}
        </div>
      {{/if}}

      {{#if authController.errorFields.password}}
        <div class="form-group has-error">
          Password:{{input type="password" value=password enter="submitRegister" class="form-control" id="inputPassword" placeholder="Password"}}
        </div>
      {{else}}
        <div class="form-group">
          Password:{{input type="password" value=password enter="submitRegister" class="form-control" id="inputPassword" placeholder="Password"}}
        </div>
      {{/if}}

      {{#if authController.errorFields.confirmPassword}}
        <div class="form-group has-error">
          Password Confirmation:{{input type="password" value=confirmPassword enter="submitRegister" class="form-control" id="inputPasswordConfirmation" placeholder="Confirm Password"}}
        </div>
      {{else}}
        <div class="form-group">
        Password Confirmation:{{input type="password" value=confirmPassword enter="submitRegister" class="form-control" id="inputPasswordConfirmation" placeholder="Confirm Password"}}
        </div>
      {{/if}}

      <div class="edctf-button">
        <button type="button" class="btn btn-success btn-login-submit edctf-submit-button" {{action 'submitRegister'}}>Register</button>
        <button type="button" class="btn btn-warning edctf-warning-button" {{action 'registerToLoginModal'}}>Login</button>
        <button type="button" class="btn btn-danger btn-cancel-action edctf-cancel-button" {{action 'closeRegisterModal'}}>Cancel</button>
      </div>
    </form>
  </div>
{{/modal-dialog}}