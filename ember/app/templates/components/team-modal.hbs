{{#modal-dialog close='closeTeamModal' translucentOverlay=true}}
  <div class="modal-dialog">
    <div class="modal-header">
      <button type="button" class="close" {{action 'closeTeamModal'}} aria-hidden="true">&times;</button>
      <h2 class="modal-title">{{team.teamname}}</h2>
    </div>

    <div class="modal-body">
      <table class="table table-hover table-condensed" style="width:100%">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Points</th>
            <th>Correct Flags</th>
            <th>Incorrect Flags</th>
            <th>Challenges Solved</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>{{team.position}}</td>
            <td>{{team.points}}</td>
            <td>{{team.correct_flags}}</td>
            <td>{{team.wrong_flags}}</td>
            <td>{{team.numSolved}}</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" {{action 'closeTeamModal'}}>Close</button>
    </div>
  </div>
{{/modal-dialog}}
