<div class="container">
  <div class="challenges-title">Challenges for {{selectedCtf.name}}</div>
  <div>
    <table class="table table-hover">
      <tbody>
        <tr class="cursor-pointer challenge-tr text-center" style="color: #909090; font-size: 18px; font-weight: 200; vertical-align: middle !important;">
          New Category
        </tr>
        {{#each selectedChallengeboard.sortedcategories as |category|}}
          <tr class="challenge-tr">
            {{#if category.sortedchallenges}}
              <td class="challenge-category-name" style="width: 1%;">
                {{category.name}}
              </td>
              <td class="text-center" style="vertical-align: middle !important; width: 1%;">
                <button type="button" class="btn btn-success btn-login-submit edctf-submit-button pull-left" style="vertical-align: middle !important;">Add<br/>Challenge</button>
              </td>
              {{#each category.sortedchallenges as |challenge|}}
                {{#if challenge.issolved}}
                  <button class="challengeButton challengeButton-solved challengeButton-xlarge sharp" {{action 'openChallenge' challenge.id}}>{{challenge.points}}</button>
                {{else}}
                  <button class="challengeButton challengeButton-unsolved challengeButton-xlarge sharp" {{action 'openChallenge' challenge.id}}>{{challenge.points}}</button>
                {{/if}}
              {{/each}}
            {{/if}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
