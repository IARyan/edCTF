{{#if ctf.scoreboard.topteamsdata}}
  <div class="scoreboard-topx">Top {{ctf.scoreboard.numtopteams}} Teams</div>
  {{c3-chart
    data=ctf.scoreboard.topteamsdata
    axis=c3Options.axis
    point=c3Options.point
    grid=c3Options.grid
    zoom=c3Options.zoom
  }}
{{/if}}

<br/>
<div class="container">
  <table class="table table-hover table-condensed" style="width:100%">
    <thead>
      <tr >
        <th class="scoreboard-keys">Rank</th>
        <th class="scoreboard-keys">Team</th>
        <th class="scoreboard-keys">Points</th>
        <th class="scoreboard-keys">Challenges Solved</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedTeams as |team|}}
        <tr {{action 'openTeamView' team}} class="cursor-pointer scoreboard-values">
          <td>{{team.position}}</td>
          <td>{{team.teamname}}</td>
          <td>{{team.points}}</td>
          <td>{{team.numSolved}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
