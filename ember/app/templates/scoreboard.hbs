{{#if ctf.scoreboard.topteamsdata}}
  <h3>Top {{ctf.scoreboard.numtopteams}} Teams</h3>
  {{c3-chart
    data=ctf.scoreboard.topteamsdata
    axis=c3Options.axis
    point=c3Options.point
    grid=c3Options.grid
    zoom=c3Options.zoom
  }}
{{/if}}

<br/>
<div class="container">
  <table class="table table-hover table-condensed" style="width:100%">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Team</th>
        <th>Points</th>
        <th>Challenges Solved</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedTeams as |team|}}
        <tr {{action 'openTeamView' team}} class="cursor-pointer">
          <td>{{team.position}}</td>
          <td>{{team.teamname}}</td>
          <td>{{team.points}}</td>
          <td>{{team.numSolved}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
