{{#if ctf.scoreboard.topteams}}
  {{#if ctf.scoreboard.topteams2}}
    <h1>Top {{ctf.scoreboard.numtopteams}} Teams - c3</h1>
    {{c3-chart
      data=ctf.scoreboard.topteams2
      axis=c3Options.axis
      point=c3Options.point
      grid=c3Options.grid
    }}
  {{/if}}

  {{#if options}}
    <h1>Top {{ctf.scoreboard.numtopteams}} Teams - google chart</h1>
    {{line-chart data=ctf.scoreboard.topteams options=options}}
  {{/if}}
{{/if}}

<h1>All Teams</h1>
<div class="container">
  <table class="table" style="width:100%">
    <thead>
      <tr>
        <th>Team</th>
        <th>Points</th>
        <th>Challenges Solved</th>
      </tr>
    </thead>
    <tbody>
      {{#each ctf.scoreboard.teams as |team|}}
        <tr>
          <td><a {{action 'openTeamView' team.id}}>{{team.teamname}}</a></td>
          <td>{{team.points}}</td>
          <td>{{team.solved}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
