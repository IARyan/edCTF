{{#if ctf.scoreboard.topteams}}
  {{#if options}}
    <h1>Top {{ctf.scoreboard.numtopteams}} Teams</h1>
    {{line-chart data=ctf.scoreboard.topteams options=options}}
  {{/if}}
{{/if}}

<h1>All Teams</h1>
<div class="container">
  <table class="table" style="width:100%">
    <thead>
      <tr>
        <th>Team</th>
        <th>Points</th>
        <th>Challenges Solved</th>
      </tr>
    </thead>
    <tbody>
      {{#each ctf.scoreboard.teams as |team|}}
        <tr>
          <td><a {{action 'openTeamView' team.id}}>{{team.teamname}}</a></td>
          <td>{{team.points}}</td>
          <td>{{team.solved}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
