{{#if topTeams}}
  <h1>Top {{scoreboard.numtopteams}} Teams</h1>
  {{line-chart data=topTeams options=options}}
{{/if}}

<h1>All Teams</h1>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Team</th>
        <th>Points</th>
        <th>Challenges Solved</th>
      </tr>
    </thead>
    <tbody>
      {{#each scoreboard.teams as |team|}}
        <tr>
          <td><a {{action 'openTeamView' team.id}}>{{team.teamname}}</a></td>
          <td>{{team.points}}</td>
          <td>{{team.solved}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
