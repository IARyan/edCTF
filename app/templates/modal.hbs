<!-- Show current modal -->
{{#if modal.isLogin}}
  {{login-modal modal=modal login="login"}}
{{else}}
  {{#if modal.isRegister}}
    {{register-modal modal=modal login="login"}}
  {{else}}
    {{#if modal.isChallenge}}
      {{challenge-modal modal=modal challenge=modal.challenge}}
    {{else}}
      {{#if modal.isTeam}}
        {{team-modal modal=modal team=modal.team}}
      {{else}}
        {{#if modal.isLogout}}
          {{logout-modal modal=modal logout="logout"}}
        {{/if}}
      {{/if}}
    {{/if}}
  {{/if}}
{{/if}}
